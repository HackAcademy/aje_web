<section id="aliados" class="">
	<div class="text-center cont-aliados cl-white">
		<h1>Nuestros Aliados</h1>
	</div>
	<div id="carousel-example-generic" class="carousel slide cl-white" data-ride="carousel">
		<div class="container text-center">
			<div class="carousel-inner car-aliados aliados-border" role="listbox">
                <% @allies.each_slice(4).each_with_index do |slice,index| %>
                    <div class="item <%= index==0 ? 'active' : '' %>">
                        <div class="row">
                            <% slice.each do |ally| %>
                                <div class="col-md-3">
                                  <a href="<%= ally.url %>">
                                    <%= image_tag ally.image.url(:medium) %>
                                  </a>
                                </div>
                            <%end%>
                        </div>
                    </div>
                <% end %>
			</div>
			<a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
				<span class="glyphicon glyphicon-menu-left aliados-arrow-left" aria-hidden="true">
						
				</span>
			</a>
			<a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
				<span class="glyphicon glyphicon-menu-right aliados-arrow-right" aria-hidden="true">
						
				</span>
			</a>
		</div>
	</div>
</section>
