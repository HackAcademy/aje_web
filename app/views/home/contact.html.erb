<div class="container">
    <div class="row">
        <div class="content-formu">
          <div class="formu">
            <%= simple_form_for( @contact, :defaults => {:input_html => {:class => "formu-input" }}) do |f| %>
                <strong><%= f.label :Nombre %></strong>
                <strong><%= f.input :name, label: false, :required => false %></strong>
                  <strong><%= f.label :Email %></strong>
                <%= f.input :email, label: false, :required => false %>
                  <strong><%= f.label :Asunto %></strong>
                <%= f.input :subject, label: false, :required => false %>
                  <strong><%= f.label :Mensaje %></strong>
                <%= f.input :message, label: false, :as => :text, :required => false, :input_html => {:class => "formu-input formu-input-textarea" } %>
                <%= f.button :submit, 'ENVIAR', :class => "formu-button" %>
            <% end %>
            </div>
        </div>
    </div>
</div>


